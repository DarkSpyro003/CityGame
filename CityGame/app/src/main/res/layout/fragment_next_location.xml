<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="be.pxl.citygame.NextLocationFragment">

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="@string/next_location"
        android:id="@+id/tv_nextLocation" />

    <Button
        android:id="@+id/btn_pause"
        android:text="@string/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_nextLocation"
        android:layout_centerHorizontal="true"
        android:onClick="goToPause"
        />

</RelativeLayout>
